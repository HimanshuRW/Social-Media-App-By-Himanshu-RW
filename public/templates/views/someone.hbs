<!DOCTYPE html>
<html lang="en">
{{>smhead}}
<body>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12" id="mainCard">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0 mh-100">
                            <div class="col-sm-4 bg-c-lite-green user-profile mh-100">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                        <img src="/images/avatars/{{userDp}}.png" class="img-radius" id="avatar"
                                            alt="User-Profile-Image">
                                    </div>
                                    <h5 class="f-w-700">{{userName}}</h5>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h5 class="m-b-20 p-b-5 b-b-default f-w-600">Make Your Friend</h5>
                                    <button type="button" onclick="sendReq('{{userEmail}}')" id="reqBtn" class="btn btn-warning">Send Friend Request</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- bootstap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>

    <!-- custom -->
    <script src="/js/someone.js"></script>
</body>

</html>