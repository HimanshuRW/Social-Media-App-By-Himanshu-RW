<!DOCTYPE html>
<html lang="en">
{{>homeHead}}

<body>
  <div class="container">
    <div class="main-body">
      <!-- /Breadcrumb -->

      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="images/avatars/{{myDp}}.png" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4>{{myName}}</h4>
                  <p class="text-secondary mb-1">{{myEmail}}</p>
                  <button type="button" onclick="logout()" class="btn btn-info">Logout</button>
                </div>
              </div>
            </div>
          </div>
          <div class="card mt-3 friends-card">
            <h5 class="m-b-20 p-b-5 b-b-default f-w-600">Friends</h5>
            <hr>
            <div class="container overflow-auto" id="friends">
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <nav class="navbar navbar-light bg-light justify-content-between">
              <a class="navbar-brand">Find Users</a>
              <div class="form-inline">
                <div class="searchArea">
                  <input class="form-control mr-sm-2" type="search" id="searchInput" name="userId" placeholder="Search"
                    aria-label="Search" required>
                  <ul class="list-group" id="suggestions">
                  </ul>
                  <!-- <input type="text" class="form-control mr-sm-2 is-invalid" type="search" id="searchInput" name="userId" placeholder="Search" aria-label="Search" required> -->
                </div>
                <button class="btn btn-outline-success my-2 my-sm-0" id="searchbtn" onclick="bringSuggestions()">Search</button>
                <div class="invalid-feedback" id="UserNotFound">
                  No User found
                </div>

              </div>
            </nav>
          </div>
          <div class="card mb-3">
            <div class="container">
              <h5 class="navbar-brand">Incoming Friend Requests</h5>
              <hr>
              <div class="container" id="users-requests">
                <nav class="user-request navbar navbar-light bg-light justify-content-between align-items-center">
                  <div>
                    <img src="images/avatars/female-1.png" alt="">
                    <a class="navbar-brand">Meenal Rawat</a>
                  </div>
                  <button class="btn btn-outline-info my-2 my-sm-0" onclick="acceptUser('himanshurw@gmail.com')">Accept
                    Friend Request</button>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <script src="js/home.js"></script>
  <script src="/js/myfriends.js"></script>
</body>

</html>